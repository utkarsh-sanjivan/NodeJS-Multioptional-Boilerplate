{
  "name": "node-js-jest-boilerplate",
  "version": "0.0.1",
  "description": "This is a boilerplate for Node JS with Jest and supertest.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "scripts": {
    "start": "nodemon index.js",
    "build": "node build",
    "eslint:check": "eslint **/*.js",
    "eslint:fix": "eslint **/*.js --fix",
    "prettier:check": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js",
    "test": "jest --config=./jest-config.json -i --detectOpenHandles --forceExit",
    "test:coverage": "jest --config=./jest-config.json --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --config=./jest-config.json --watchAll",
    "test:watch-coverage": "jest --config=./jest-config.json --coverage --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint:check && npm run prettier:check",
      "pre-push": "npm run test"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "node-notifier": "^10.0.0",
    "nodemon": "^2.0.7"
  }
}
